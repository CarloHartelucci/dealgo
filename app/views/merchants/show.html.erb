<div class="row-fluid well">
	<div class="span2">
		<img src="<%= @merchant.logo %>">
	</div>
	<div class="span10">
		<h1><%= @merchant.name %></h1>
		<p><strong>Website: </strong><%= @merchant.website %></p>
		<p><strong>Facebook: </strong><%= @merchant.facebook %></p>
		<p><strong>Twitter: </strong><%= @merchant.twitter %></p>
		<p><strong>Email: </strong><%= @merchant.support_email %></p>
	</div>
</div>
<% if !@merchant.deals.empty? %>
<div class="row-fluid">
	<div class="span3">
		<h3>Deals</h3>
		<ul class="nav nav-tabs nav-stacked">
			<% @merchant.deals.each do |d| %>
				<li>
					<a href="/admin/deals/<%= d.id %>">
						<div>
							<%= d.merchant.name %>
						</div>
					</a>
				</li>
			<% end %>
		</ul>
	</div>
	<div class="span9">
		<h3>Deal Summary</h3>
		<div class="row-fluid">
			<div class="span12">
				<p><strong>Description:</strong></p>
				<p><%= @merchant.deals.first.description %></p>
			</div>
			<div class="span4">
				<p><strong>Name: </strong><%= @merchant.deals.first.merchant.name %></p>
				<p><strong>Start: </strong><%= @merchant.deals.first.dealstart.to_s(:long) %></p>
				<p><strong>End: </strong><%= @merchant.deals.first.dealend.to_s(:long) %></p>
				<p><strong>Maximum Quantity: </strong><%= @merchant.deals.first.maxquantity %></p>
				<p><strong>Base Price: </strong><%= @merchant.deals.first.base_price %></p>
			</div>		
			<div class="span7">						
				<p><strong>Thresholds:</strong></p>
				<table class="table table-striped table-condensed">
					<thead>
						<th>Quantity</th>
						<th>Discount</th>
						<th>Price</th>
					</thead>
					<tbody>
						<% @merchant.deals.first.deal_thresholds.each do |dt| %>
							<tr>
								<td><%= dt.quantity %></td>
								<td><%= dt.discount %>%</td>
								<td><%= dt.discount_price %></td>
							</tr>
						<% end %>
					</tbody>
				</table>

			</div>
		</div>
		<div class="row-fluid">
			<h3>Purchases</h3>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Name</th>
						<th>Email</th>
						<th>Phone</th>
						<th>Quantity</th>
						<th>Card Type</th>
						<th>Card Number</th>
						<th>Expiration</th>
					</tr>
				</thead>
				<tbody>
					<% @merchant.deals.first.purchases.each do |p| %>
						<tr>
							<td><%= p.purchaser.firstname %> <%= p.purchaser.lastname %></p></td>
							<td><%= p.purchaser.email %></td>
							<td><%= p.purchaser.phone %></td>
							<td><%= p.quantity %></td>
							<td><%= p.purchaser.payment_info.card_type %></td>
							<td><%= p.purchaser.payment_info.card_number %></td>
							<td><%= p.purchaser.payment_info.expiration_month %>/<%=p.purchaser.payment_info.expiration_year %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
<% end %>


