<%= render 'shared/error_messages', errors:@errors %>
<div class="row-fluid">
	<div class="span12">
		<form class="form-inline" accept-charset="UTF-8" action="/<%= @deal.merchant.merchant_code %>/purchase" method="post">
			<h3>Contact Information</h3>
			<label class="span12">First Name
				<input style="float:right;margin-right:30px" type="text" placeholder="First Name" id="first_name" name="first_name">
			</label>

			<label class="span12">Last Name
				<input style="float:right;margin-right:30px" type="text" placeholder="Last Name" id="last_name" name="last_name">
			</label>
			
			<label class="span12">Email Address
				<input style="float:right;margin-right:30px" type="email" placeholder="Email Address" id="email" name="email">
			</label>

			<label class="span12">Phone Number
				<input style="float:right;margin-right:30px" type="tel" placeholder="Phone Number" id="phone" name="phone">
			</label>
				
			<h3>Payment Information</h3>
			<label class="span12">Card Number
				<input style="float:right;margin-right:30px" type="text" placeholder="Card Number" id="card_number" name="card_number">
			</label>

			<label class="span12">Card Type
				<select style="float:right;margin-right:30px" name="card_type" id="card_type">
					<%= @card_types.each do |t| %>
						<option value="<%= t.card_type %>"><%= t.card_description %></option>
					<% end %>
				</select>
			</label>

			<label class="span12">Card Expiration
				<input style="float:right;width:100px;margin-right:30px;" id="expiration_year" name="expiration_year" min="<%= DateTime.now.year %>" max="<%= DateTime.now.year %> + 20" type="number" value="<%= DateTime.now.year %>">
				<input style="float:right;width:100px;margin-right:1px;" id="expiration_month" name="expiration_month" min="1" max="12" type="number" value="1">

			</label>

			<label class="span12">Quantity
				<input style="float:right;margin-right:30px" type="number" id="quantity" name="quantity" min="1" max="<%= @deal.available_quantity%>" value="1">
			</label>	
			
			<label class="checkbox span12">
				<input type="checkbox" id="notification_optin" name="notification_optin">Notify me of similar deals from other great merchants!
			</label>

			<button type="submit" style="margin-top:10px;margin-bottom:10px;" class="offset2 btn btn-large btn-success">Purchase!</button>
		</form>
	</div>
	<div class="row-fluid">
		<h5>Follow or Like to learn about more deals from <%= @deal.merchant.name %></h5>
		<%= render 'follow_and_like' %>
	</div>
</div>