<div class="row-fluid">		
	<div class="span4">
		<a href="<%= @deal.merchant.website %>">
			<img src="/assets/dirtybird.png"/>
		</a>
	</div>
	<div class="span8">
		<h1><%= @deal.merchant.name %></h1>
		<p><%= @deal.description %></p>
		<div class="row-fluid">
			<div class="span12">
				<h5>Invite others to the deal to get a bigger discount!</h5>
				<ul>
					<li style="display:inline;list-style:none;">
						<a href="https://twitter.com/share" class="twitter-share-button">Tweet</a>
						<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
					</li>
					<li style="display:inline;list-style:none;">
						<div class="fb-like" data-layout="button_count" data-width="150" data-show-faces="false" data-action="recommend" style="display:inline"></div>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>
<div class="row-fluid">
	<div class="span12">
		<div class="discount-box span5" style="border-color:<%= @deal.merchant.get_secondary_color %>;">
			<p><h3>Current Discount</h3></p>
			<p><h1><%= @deal.deal_thresholds.first.discount %>%</h1></p>
			<p>Guaranteed</p>
		</div>
		<div class="discount-box span5" style="border-color:<%= @deal.merchant.get_secondary_color %>;">
			<p><h3>Best Discount</h3></p>
			<p><h1><%= @deal.deal_thresholds.last.discount %>%</h1></p>
			<p>Only <%= @deal.deal_thresholds.last.quantity - @deal.quantity_sold %> to go</p>
		</div>
	</div>
</div>
<div class="row-fluid">
	<% previous_threshold = @deal.deal_thresholds.first %>
	<% @deal.deal_thresholds.each do |d| %>
	<p>
		<% if d != @deal.deal_thresholds.first %>
		If we sell <strong><%= previous_threshold.quantity %> - <%= d.quantity - 1 %></strong> gift cards the discount is <strong><%= previous_threshold.discount %>% off</strong> and you pay <strong>$<%= "%.2f" % previous_threshold.discount_price  %></strong>
		<% end %>
		<% previous_threshold = d %>
	</p>
	<% end %>
	<p>
		If we sell <strong><%= @deal.deal_thresholds.last.quantity %></strong> gift cards the discount is <strong><%= @deal.deal_thresholds.last.discount %>% off</strong> and you pay <strong>$<%= "%.2f" % @deal.deal_thresholds.last.discount_price %></strong>
	</p>
</div>
<br>
<div class="row-fluid">
	<div class="offset2">
		<a href="/deals/<%= @deal.merchant.merchant_code %>/purchase" class="btn btn-large btn-primary btn-success">Purchase!</a>
	</div>
	<br>
	<div class="offset1">
		<p>Offer Expires: <%= @deal.dealend.to_s(:long) %></p>
	</div>
</div>