<%= render 'nav' %>

<div class="row">
  <div class="span4 offset4">
    <h1>Sign in</h1>
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %> 

      <%= f.label "" %>
      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
