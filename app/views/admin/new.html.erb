<%= render 'nav' %>

<div class="span5 offset3">
  <h1>Sign in</h1>
  <br>
  <div class="row-fluid">
    <div class="span12">

      <form class="form-inline" accept-charset="UTF-8" action="/admin" method="post">
        <label class="span12">Email
          <input type="email" placeholder="Email" id="email" name="email">
        </label>

        <label class="span12">Password
          <input type="password" placeholder="Password" id="password" name="password">
        </label>

        <button type="submit" class="offset2 btn btn-large btn-success">Sign in</button>
      </form>
    </div>
  </div>
</div>
