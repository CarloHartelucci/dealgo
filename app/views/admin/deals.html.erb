<div class="row-fluid">
	<div class="span3">
		<h3>Active Deals</h3>
		<ul class="nav nav-tabs nav-stacked">
			<% @deals.each do |d| %>
				<% if @active_deal.id == d.id %>
				<li class="active">
				<% else %>
				<li>
				<% end %>
					<a href="/admin/deals/<%= d.id %>">
						<div>
							<%= d.merchant.name %>
						</div>
					</a>
				</li>
			<% end %>
		</ul>
	</div>
	<div class="span8">	
		<h3>Deal Summary</h3>
		<div class="row-fluid">
			<div class="span12">
				<p><strong>Description:</strong></p>
				<p><%= @active_deal.description %></p>
			</div>
			<div class="span4">
				<p><strong>Name: </strong><%= @active_deal.merchant.name %></p>
				<p><strong>Start: </strong><%= @active_deal.dealstart.to_s(:long) %></p>
				<p><strong>End: </strong><%= @active_deal.dealend.to_s(:long) %></p>
				<p><strong>Maximum Quantity: </strong><%= @active_deal.maxquantity %></p>
				<p><strong>Base Price: </strong><%= @active_deal.base_price %></p>
			</div>		
			<div class="span7">
				
				<p><strong>Thresholds:</strong></p>
				<table class="table table-striped table-condensed">
					<thead>
						<th>Quantity</th>
						<th>Discount</th>
						<th>Price</th>
					</thead>
					<tbody>
						<% @active_deal.deal_thresholds.each do |dt| %>
							<tr>
								<td><%= dt.quantity %></td>
								<td><%= dt.discount %>%</td>
								<td><%= dt.discount_price %></td>
							</tr>
						<% end %>
					</tbody>
				</table>

			</div>
		</div>
		<div class="row-fluid">
			<h3>Purchases</h3>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Name</th>
						<th>Email</th>
						<th>Phone</th>
						<th>Quantity</th>
						<th>Card Type</th>
						<th>Card Number</th>
						<th>Expiration</th>
					</tr>
				</thead>
				<tbody>
					<% @purchases.each do |p| %>
						<tr>
							<td><%= p.purchaser.firstname %> <%= p.purchaser.lastname %></p></td>
							<td><%= p.purchaser.email %></td>
							<td><%= p.purchaser.phone %></td>
							<td><%= p.quantity %></td>
							<td><%= p.purchaser.payment_info.card_type %></td>
							<td><%= p.purchaser.payment_info.card_number %></td>
							<td><%= p.purchaser.payment_info.expiration_month %>/<%=p.purchaser.payment_info.expiration_year %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

