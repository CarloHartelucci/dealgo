<!DOCTYPE html>
<html>
<head>
  <title>DealGo Admin</title>
 	 <%= stylesheet_link_tag    "application", :media => "all" %>
 	 <%= javascript_include_tag "application" %>
  	<%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar">
		<div class="navbar-inner">
			<div class="container-fluid">
				<ul class="nav">
				  	<% if @active=="merchants" %>
				  	<li class="active">
				  	<% else %>
				   	<li>
				  	<% end %>
				  	<a href="/admin/merchants">Merchants</a>
				  </li>
				  	<% if @active=="deals" %>
				  	<li class="active">
				  	<% else %>
				   	<li>
				  	<% end %>
				    <a href="/admin/deals">Deals</a>
				  </li>
				  <li class="dropdown">
				    <a href="#"
				          class="dropdown-toggle"
				          data-toggle="dropdown">
				          Admin
				          <b class="caret"></b>
				    </a>
				    <ul class="dropdown-menu">
				      <li>
				      	<%= link_to "Sign out", signout_path, method: "delete" %>
				      </li>
				    </ul>
				  </li>
				</ul>
			</div>
		</div>
	</div>
	<div class="container-fluid">
		<div class="row-fluid">
		<%= yield %>
		</div>
	</div>
</body>
</html>
